{
  "name": "hecom-i18n-tools",
  "version": "1.0.9",
  "description": "RN/JS/TS 多项目国际化扫描与Excel导出/导入工具",
  "main": "dist/cli.js",
  "bin": {
    "hecom-i18n-tools": "dist/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "USAGE.md",
    "QUICKSTART.md",
    "WORKFLOW.md",
    "PROJECT-STRUCTURE.md",
    "DOCS.md",
    "SYNC-USAGE.md",
    "RN-GUIDE.md",
    "ASYNC-TRANSLATE.md",
    "rn.config.js",
    "examples/",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/cli.js",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli.js",
    "scan": "yarn ts-node dist/cli.js scan -s 'test' -o 'x.xlsx'",
    "replace": "yarn ts-node dist/cli.js replace --excel=x.xlsx --importPath='core/util/i18n'",
    "gen": "yarn ts-node dist/cli.js gen"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "react-native",
    "excel",
    "translation"
  ],
  "author": "HECOM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hecom-rn/i18n-tools.git"
  },
  "bugs": {
    "url": "https://github.com/hecom-rn/i18n-tools/issues"
  },
  "homepage": "https://github.com/hecom-rn/i18n-tools#readme",
  "dependencies": {
    "@babel/parser": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "crypto-js": "3.3.0",
    "lodash": "^4.17.21",
    "ts-node": "^10.9.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
    "@types/node": "^24.3.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
