{
  "name": "hecom-i18n-tools",
  "version": "0.1.0",
  "description": "RN/JS/TS 多项目国际化扫描与Excel导出/导入工具",
  "main": "src/cli.js",
  "bin": {
    "hecom-i18n-tools": "src/cli.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepublishOnly": "npm run build",
    "start": "node dist/cli.js",
    "scan": "yarn ts-node src/cli.ts scan",
    "replace": "yarn ts-node src/cli.ts replace",
    "gen": "yarn ts-node src/cli.ts gen"
  },
  "keywords": [
    "i18n",
    "internationalization",
    "react-native",
    "excel",
    "translation"
  ],
  "author": "HECOM",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hecom-rn/i18n-tools.git"
  },
  "bugs": {
    "url": "https://github.com/hecom-rn/i18n-tools/issues"
  },
  "homepage": "https://github.com/hecom-rn/i18n-tools#readme",
  "dependencies": {
    "@babel/parser": "^7.24.0",
    "@babel/traverse": "^7.24.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "crypto-js": "3.3.0",
    "lodash": "^4.17.21",
    "ts-node": "^10.9.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/babel__traverse": "^7.28.0",
